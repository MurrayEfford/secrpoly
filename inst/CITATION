citHeader("To cite package 'secrpoly' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)

bibentry(
    bibtype = "Manual",
    title   = "secrpoly: Area search spatially explicit capture-recapture models",
    author  = c(person("Murray","Efford")),
    year    = year,
    note    = vers,
    textVersion =
        paste("Efford, M. G. (", year,
        "). secr: Area search spatially explicit capture-recapture models. ",
        vers, ". ", 
        sep = "")
)
